# General UNIX
alias c='clear'
alias cp='cp -iv'
alias df='df -h'
alias du='du -h'
alias dud='du -d 1 -h'
alias duf='du -sh *'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias path='echo -e ${PATH//:/\\n}'
alias pi='ping -Anc 5 1.1.1.1'
alias src='. ~/.zshrc'
alias srm='srm -iv'

# Moving around
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias .2='cd ../../'
alias .3='cd ../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

# Listing files and directories
# alias ls="colorls --sd -r"# alias la="colorls -a"# alias lc="colorls -t"
alias l='ls -lFh'     #size,show type,human readable
alias lS='ls -1FSsh'
alias la='ls -lAFh'   #long list,show almost all,show type,human readable
alias lart='ls -1Fcart'
alias ld='ls -ld' # Useful for showing permissions of a single directory
alias ldot='ls -ld .*'
alias ll='ls -l'      #long list
alias lr='ls -tRFh'   #sorted by date,recursive,show type,human readable
alias lrt='ls -1Fcrt'
alias lt='ls -ltFh'   #long list,sorted by date,show type,human readable

# Finding stuff!
alias fd='find . -type d -name'
alias ff='find . -type f -name'

# Jump to quick edits
alias ea='$EDITOR ~/dotfiles/zsh/aliases'
alias ed='$EDITOR ~/dotfiles'
alias ef='$EDITOR ~/dotfiles/zsh/functions'
alias ep='$EDITOR ~/dotfiles/zsh/prompt'
alias et='$EDITOR ~/.tmux.conf'
alias ev='$EDITOR ~/.vimrc'
alias evl='$EDITOR ~/.vimrc.local'
alias ez='$EDITOR ~/.zshrc'
alias ezl='$EDITOR ~/.zshrc.local'

# Tree
alias t1='tree -L 1'
alias t1a='tree -La 1'
